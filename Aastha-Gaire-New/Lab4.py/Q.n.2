import matplotlib.pyplot as plt

# Create figure and axis
fig, ax = plt.subplots()

# Create circles (center_x, center_y), radius
circle1 = plt.Circle((-2, 2), 1, color='red', fill=False)
circle2 = plt.Circle((3, 1), 2, color='blue', fill=False)
circle3 = plt.Circle((0, -3), 0.8, color='green', fill=False)

# Add circles to plot
ax.add_patch(circle1)
ax.add_patch(circle2)
ax.add_patch(circle3)

# Set equal scaling
ax.set_aspect('equal')

# Set limits
ax.set_xlim(-5, 6)
ax.set_ylim(-5, 5)

plt.title("Circles with Different Radii and Centres")
plt.grid(True)
plt.show()