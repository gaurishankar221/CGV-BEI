

import matplotlib.pyplot as plt

def midpoint_ellipse(rx, ry, xc, yc):
    x = 0
    y = ry
    p1 = ry**2 - rx**2 * ry + 0.25 * rx**2
    points_x = []
    points_y = []

    dx = 2 * ry**2 * x
    dy = 2 * rx**2 * y

    while dx < dy:
        points_x += [xc + x, xc - x, xc + x, xc - x]
        points_y += [yc + y, yc + y, yc - y, yc - y]

        if p1 < 0:
            x += 1
            dx = 2 * ry**2 * x
            p1 += dx + ry**2
        else:
            x += 1
            y -= 1
            dx = 2 * ry**2 * x
            dy = 2 * rx**2 * y
            p1 += dx - dy + ry**2

    p2 = (ry**2) * (x + 0.5)**2 + (rx**2) * (y - 1)**2 - (rx**2 * ry**2)

    while y >= 0:
        points_x += [xc + x, xc - x, xc + x, xc - x]
        points_y += [yc + y, yc + y, yc - y, yc - y]

        if p2 > 0:
            y -= 1
            dy = 2 * rx**2 * y
            p2 += rx**2 - dy
        else:
            y -= 1
            x += 1
            dx = 2 * ry**2 * x
            dy = 2 * rx**2 * y
            p2 += dx - dy + rx**2

    return points_x, points_y


fig, ax = plt.subplots()

# Ellipse 1
x1, y1 = midpoint_ellipse(6, 4, 0, 0)
ax.scatter(x1, y1, s=10, color='blue')

# Ellipse 2
x2, y2 = midpoint_ellipse(4, 2, 10, 5)
ax.scatter(x2, y2, s=10, color='red')

# Ellipse 3
x3, y3 = midpoint_ellipse(3, 6, -8, -3)
ax.scatter(x3, y3, s=10, color='green')

ax.set_aspect('equal')
plt.title("Ellipses with Different Radii and Centres")
plt.grid(True)
plt.show()